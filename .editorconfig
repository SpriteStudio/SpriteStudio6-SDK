# http://editorconfig.org
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{c,cpp,h,cc,cxx,c++,hpp,hh,hxx}]
charset = utf-8-bom

[{CMakeLists.txt,*.cmake}]
indent_size = 4
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

